<%- include('./partials/header'); %>

    <% if (req.user) { %>
        <div>
            <a href='/games/new' class='button'>Create Post</a>
        </div>
    <% } %>
    <% if (games.length) { %>
        <% games.forEach(function(g) { %>
            <div class='post-container'>
                <div class='post-left-section'>
                    <div class='game-frame'> 
                        <iframe src="<%= g.gameUrl %>" width=600 height=397 frameborder=0></iframe>
                    </div>
                </div>
                <div class='post-right-section'>
                    <div class='post-title'>
                        <h1><%= g.gameTitle %><a href="/games/<%= g._id %>"></a></h1>
                    </div>
                    <div class='post-text'>
                        <p><%= g.gameText %> </p>
                    </div>
                    <div class='post-controls'>                  
                        <a class='expand-link' href="/games/<%= g._id %>">Expand</a>
                        <% if (req.user && req.user._id === String(g.author)) { %>
                            <a class='edit-link'>Edit</a>
                            <a class='delete-link'>Delete</a>
                        <% } %>
                    </div>
                </div>
            </div>
        <% }) %> 
    <%  } else { %>
        <h1 id='placeholder-text'>Nothing here yet. Sign in to make a post!</h1>
    <% } %>

<%- include('./partials/footer'); %>